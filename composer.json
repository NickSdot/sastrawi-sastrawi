{
    "name": "sastrawi/sastrawi",
    "type": "library",
    "description": "PHP library for stemming Indonesian language (Bahasa Indonesia)",
    "keywords": [
        "stem",
        "indonesian",
        "bahasa",
        "indonesia",
        "kata dasar",
        "root word"
    ],
    "homepage": "https://github.com/sastrawi/sastrawi",
    "authors": [
        {
            "name": "Andy Librian",
            "email": "andylibrian@gmail.com",
            "homepage": "http://andylibrian.com",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~1.0",
        "phpunit/phpunit": "12.*",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-0": {
            "Sastrawi\\": "src"
        }
    },
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "support": {
        "issues": "https://github.com/sastrawi/sastrawi/issues",
        "source": "https://github.com/sastrawi/sastrawi"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
